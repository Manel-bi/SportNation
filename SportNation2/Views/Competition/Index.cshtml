@model IEnumerable<SportNation2.Data.Models.CompetitionListViewModel>

@{
    ViewData["Title"] = "Liste des compétitions";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Nouvelle compétition</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SportName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SportName)
            </td>
            <td>
                @Html.ActionLink("Add Event", "CreateCompetitionEvent", "Competition", new { competitionId = item.Id }, null)|
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    @Html.ActionLink("Details", "DetailCompetionEvent", "Competition", new { competitionId = item.Id }, null)|

            </td>
        </tr>
}
    </tbody>
</table>
