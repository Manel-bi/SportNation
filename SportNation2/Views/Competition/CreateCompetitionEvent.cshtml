@using static SportNation2.Infrastructure.Enumerations;
@model SportNation2.Data.Models.AddCompetitionEventViewModel

@{
    ViewData["Title"] = "Create Competition Event";
}

<h1>Create</h1>

<h4>CreateCompetitionViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCompetitionEvent">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
          
        
            <div class="form-group">
                <label asp-for="MinAge" class="control-label"></label>
                <input asp-for="MinAge" class="form-control" />
                <span asp-validation-for="MinAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxAge" class="control-label"></label>
                <input asp-for="MaxAge" class="form-control" />
                <span asp-validation-for="MaxAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxParticipants" class="control-label"></label>
                <input asp-for="MaxParticipants" class="form-control" />
                <span asp-validation-for="MaxParticipants" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <select asp-for="Genre" class="form-control" id="genre" name="genre" aria-label="">
                    <option value="">Sélectionnez le genre</option>
                    @foreach (var item in Enum.GetValues(typeof(CompetitionGenre)))
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="CompetitionId" value="@Model.CompetitionId" />
            <div class="form-group">
                <input type="submit" value="CreateCompetionEvent" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Revenir à la liste des compétitions </a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


